@model EmployeeManagementSystem.Models.Employee


<div class="row justify-content-center">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@Model.Name</h3>
            </div>
            <div class="card-body">
                <img class="card-img img-thumbnail" src="~/img/img_avatar1.png" alt="Avatar1" />
                <h4>Employee ID: @Model.Id</h4>
                <h4>Employee Email: @Model.Email</h4>
                <h4>Employee Department: @Model.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary">Back</a>
                <a class="btn btn-primary">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>