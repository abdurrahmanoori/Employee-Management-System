@model EmployeeManagementSystem.ViewModels.EmployeeEditViewModel
@{
    ViewData["Title"] = "Edit";
    var photoPath =(Model.ExistingPhotoPath ?? "noimage.png");
}
<h1 class="text-white btn btn-dark">Edit</h1>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <select class="form-control" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()"></select>
    </div>

    <div class="form-group">
        <label>Photo</label>
        <div class="custom-file">
            <label class="custom-file-label">Click here to change photo</label>
            <input class="form-control custom-file-input" type="file" name="file" />
        </div>
        @*<input type="file" id="uploadBox" name="file" />*@
    </div>

    <div class="form-group col-sm-4 offset-4">
        <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>

</form>