@model EmployeeManagementSystem.ViewModels.EmployeeCreateViewModel
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <select class="form-control" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()"></select>
    </div>

    <div class="form-group">
        <label>Photo</label>
        <div class="custom-file">
            <label class="custom-file-label">Choose File...</label>
            <input class="form-control custom-file-input" type="file" name="file" />
        </div>
        @*<input type="file" id="uploadBox" name="file" />*@
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
